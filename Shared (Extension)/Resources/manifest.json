{
    "manifest_version": 3,
    "default_locale": "en",

    "name": "𝕏𝟜𝕌",
    "description": "Disables the \"For You\" on X.com. If the site tries to load \"For You\" this your will be switched to the timeline.",
    "version": "1.0",

    "icons": {
        "48": "images/icon-48.png",
        "96": "images/icon-96.png",
        "128": "images/icon-128.png",
        "256": "images/icon-256.png",
        "512": "images/icon-512.png"
    },

    "content_scripts": [{
        "js": [ "content.js" ],
        "matches": [ "*://*.x.com/*" ]
    }],

    "action": {
        "default_icon": "images/toolbar-icon.svg"
    },

    "permissions": [ "activeTab" ]
}
