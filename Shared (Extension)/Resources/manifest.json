{
    "manifest_version": 3,
    "default_locale": "en",

    "name": "ğ•ğŸœğ•Œ",
    "description": "Prevents the \"For You\" link from being selected on Twitter, currently called X.  Once installed, when the site tries to load \"For You\" this extension will switch to the timeline.",
    "version": "1.0",

    "icons": {
        "48": "images/icon-48.png",
        "96": "images/icon-96.png",
        "128": "images/icon-128.png",
        "256": "images/icon-256.png",
        "512": "images/icon-512.png"
    },

    "content_scripts": [{
        "js": [ "content.js" ],
        "matches": [ "*://*.x.com/home" ]
    }],

    "action": {
        "default_icon": "images/toolbar-icon.svg"
    },

    "permissions": [ "activeTab" ]
}
